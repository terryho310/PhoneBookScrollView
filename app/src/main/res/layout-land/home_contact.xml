<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
	android:fillViewport="true"
	android:layout_width="match_parent"
	android:layout_height="match_parent">
	<RelativeLayout
		android:layout_margin="16dp"
		android:layout_width="match_parent"
		android:layout_height="wrap_content">
		<android.support.v4.widget.Space
			android:id="@+id/centerView"
			android:layout_centerInParent="true"
			android:visibility="invisible"
			android:layout_width="0dp"
			android:layout_height="0dp"/>
		<TextView
			android:id="@+id/title"
			android:text="@string/contact_form"
			android:textSize="34sp"
			android:textColor="#999999"
			android:layout_centerHorizontal="true"
			android:layout_width="wrap_content"
			android:layout_height="wrap_content"/>
		<EditText
			android:id="@+id/firstName"
			android:textSize="22sp"
			android:hint="@string/first_name"
			android:inputType="textPersonName"
			android:layout_below="@id/title"
			android:layout_toStartOf="@id/centerView"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<EditText
			android:id="@+id/lastName"
			android:textSize="22sp"
			android:hint="@string/last_name"
			android:inputType="textPersonName"
			android:layout_alignTop="@id/firstName"
			android:layout_alignBottom="@id/firstName"
			android:layout_toEndOf="@id/centerView"
			android:layout_marginStart="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<EditText
			android:id="@+id/phone"
			android:textSize="22sp"
			android:hint="@string/phone"
			android:inputType="phone|number"
			android:layout_below="@id/firstName"
			android:layout_toStartOf="@id/centerView"
			android:layout_marginTop="16dp"
			android:layout_marginEnd="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<EditText
			android:id="@+id/website"
			android:textSize="22sp"
			android:hint="@string/website"
			android:inputType="textWebEditText"
			android:layout_alignTop="@id/phone"
			android:layout_alignBottom="@id/phone"
			android:layout_toEndOf="@id/centerView"
			android:layout_marginStart="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<Button
			android:id="@+id/update"
			android:text="@string/update"
			android:textSize="20sp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:layout_below="@id/website"
			android:layout_toEndOf="@id/centerView"
			android:layout_marginTop="24dp"
			android:layout_marginStart="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
		<Button
			android:id="@+id/cancel"
			android:text="@string/cancel"
			android:textSize="20sp"
			android:paddingStart="16dp"
			android:paddingEnd="16dp"
			android:layout_toStartOf="@id/centerView"
			android:layout_alignTop="@id/update"
			android:layout_alignBottom="@id/update"
			android:layout_marginEnd="8dp"
			android:layout_width="match_parent"
			android:layout_height="wrap_content"/>
	</RelativeLayout>
</ScrollView>